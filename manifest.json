{ 
	"manifest_version": 2,
	
	"name": "OKCoin",
	"description": "OKCoin行情",
	"version": "0.1",
	"author": "ginuerzh@gmail.com",
	
	"options_page": "options.html",
	
	"icons": {
		"16": "images/okcoin.png",
		"48": "images/okcoin.png",
		"128": "images/okcoin.png"
	},
	
	"browser_action": { 
		"default_title": "OKCoin 行情",
		"default_icon": {
			"19": "images/okcoin.png",
			"38": "images/okcoin.png"
		},
		"default_popup": "popup.html" 
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"permissions": [
		"alarms",
		"storage",
		"background",
		"*://*.okcoin.com/"
	]
}
